{
  "name": "grapesjs-tailwindcss-daisyui-plugin",
  "version": "0.0.1",
  "description": "GrapesJS Tailwind Plugin with daisyUI components",
  "main": "dist/index.js",
  "author": "Andrea Fassina <fasenderos@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:fasenderos/grapesjs-tailwindcss-daisyui-plugin.git"
  },
  "homepage": "https://github.com/fasenderos/grapesjs-tailwindcss-daisyui-plugin",
  "bugs": {
    "url": "https://github.com/fasenderos/grapesjs-tailwindcss-daisyui-plugin/issues"
  },
  "scripts": {
    "build": "rm -rf ./dist && grapesjs-cli build --patch=false",
    "lint": "biome check ./src",
    "lint:fix": "biome check --write ./src",
    "release": "node --env-file=.env ./node_modules/release-it/bin/release-it.js --ci",
    "start": "grapesjs-cli serve"
  },
  "keywords": [
    "grapesjs",
    "plugin",
    "tailwindcss",
    "tailwind",
    "css"
  ],
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@release-it/conventional-changelog": "^10.0.0",
    "grapesjs": "^0.22.5",
    "grapesjs-cli": "^4.1.3",
    "release-it": "^18.1.2"
  },
  "license": "MIT",
  "files": [
    "dist",
    "AUTHORS",
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "dependencies": {
    "grapesjs-tailwindcss-plugin": "^0.1.8"
  }
}
